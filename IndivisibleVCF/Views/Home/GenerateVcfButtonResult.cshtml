@model IndivisibleVCF.Models.GenerateVcfButtonResultViewModel
@{
    ViewBag.Title = "GeneratedResultVcf";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Here you go!</h2>
<p>Below are VCF files for all federal representatives for user zip code (@ViewData.Model.ZipCode)</p>

@foreach (var representative in Model.RepresentativeSearchResult.Results)
{
    <div class="container">
        <div class="container">
            <div class="row col-md-3">
                <label for="downloadButton">@representative.FirstName @representative.LastName</label>
            </div>
        </div>
        <div class="container">
            <div class="row col-md-3">
                <input name="downloadButton" id="downloadButton" type="button" value="Download File Result" class="btn btn-primary btn-lg" />
            </div>
        </div>
    </div>
}
